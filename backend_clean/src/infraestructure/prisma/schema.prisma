generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

model Produto {
  id              String              @id @default(uuid())
  nome            String
  descricao       String?
  codigoBarras    String?             @unique
  precoCompra     Float
  precoVenda      Float
  dataCadastro    DateTime            @default(now())
  ativo           Boolean             @default(true)

  idCategoria     String
  categoria       Categoria           @relation(fields: [idCategoria], references: [id])

  idFornecedor    String?
  fornecedor      Fornecedor?         @relation(fields: [idFornecedor], references: [id])

  estoques        Estoque[]
  movimentacoes   MovimentacaoEstoque[]
}

model Categoria {
  id        String     @id @default(uuid())
  nome      String
  descricao String?

  produtos  Produto[]
}

model Fornecedor {
  id        String     @id @default(uuid())
  nome      String
  cnpj      String     @unique
  email     String?
  telefone  String?
  endereco  String?

  produtos  Produto[]
  compras   Compra[]
}

model LocalArmazenamento {
  id             String     @id @default(uuid())
  nome           String
  endereco       String?
  responsavel    String?

  estoques       Estoque[]
  movimentacoes  MovimentacaoEstoque[]
}

model Estoque {
  id                   String     @id @default(uuid())
  idProduto            String
  idLocalArmazenamento String
  quantidade           Int
  dataAtualizacao      DateTime   @default(now())

  produto              Produto    @relation(fields: [idProduto], references: [id])
  local                LocalArmazenamento @relation(fields: [idLocalArmazenamento], references: [id])
}

model MovimentacaoEstoque {
  id                   String     @id @default(uuid())
  idProduto            String
  idLocalArmazenamento String
  idUsuario            String
  tipo                 TipoMovimentacao
  quantidade           Int
  descricao            String?
  data                 DateTime   @default(now())

  produto              Produto    @relation(fields: [idProduto], references: [id])
  local                LocalArmazenamento @relation(fields: [idLocalArmazenamento], references: [id])
  usuario              Usuario    @relation(fields: [idUsuario], references: [id])
}

model Usuario {
  id         String     @id @default(uuid())
  nome       String
  email      String     @unique
  senhaHash  String
  perfil     PerfilUsuario

  movimentacoes MovimentacaoEstoque[]
}

model Compra {
  id           String     @id @default(uuid())
  idFornecedor String
  data         DateTime   @default(now())

  fornecedor   Fornecedor @relation(fields: [idFornecedor], references: [id])
  // Se quiser, pode adicionar uma tabela de itens depois
}

enum TipoMovimentacao {
  ENTRADA
  SAIDA
  TRANSFERENCIA
}

enum PerfilUsuario {
  ADMIN
  FUNCIONARIO
}
